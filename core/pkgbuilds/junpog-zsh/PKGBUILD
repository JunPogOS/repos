# Maintainer: Ocillacubes <squirtle1607@rollingoak.com>
pkgname='junpog-zsh'
pkgver=1.0
pkgrel=1
pkgdesc="Zsh shell config"
arch=('x86_64')
depends=('zsh' 'zsh-autosuggestions' 'zsh-completions' 'zsh-syntax-highlighting')
makedepends=('git')
url="https://github.com/JunPogOS/configs"
source=('junpog-zsh::git+https://github.com/JunPogOS/configs.git')
md5sums=('SKIP')

package() {
        mkdir -p "$pkgdir/usr/share/junpogos/.config"
        cp "$srcdir/${pkgname}/.zshrc" "$pkgdir/usr/share/junpogos/.zshrc"
        cd "$srcdir/${pkgname}/.config"
        cp -r zsh "$pkgdir/usr/share/junpogos/.config/zsh"
}

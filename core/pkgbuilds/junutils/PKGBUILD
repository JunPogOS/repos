# Maintainer: Ocillacubes <squirtle1607@rollingoak.com>
pkgname='junutils'
pkgver=1.0
pkgrel=1
pkgdesc="(mostly) useful terminal utilities"
arch=('x86_64')
depends=('tree' 'htop' 'neofetch' 'ranger' 'lynx' 'neovim' 'newsboat' 'calc' 'w3m' 'openssh' 'tree' 'p7zip' 'python-pip' 'exa')
makedepends=('git')
url="https://github.com/JunPogOS/configs"
source=('junutils::git+https://github.com/JunPogOS/configs.git')
md5sums=('SKIP')

package() {
        mkdir -p "$pkgdir/$HOME/.local"
        cd "$srcdir/${pkgname}/.local"
        cp -r scripts "$pkgdir/$HOME/.local/scripts"
        mkdir -p "$pkgdir/$HOME/.config"
        cd "$srcdir/${pkgname}/.config"
        cp -r nvim "$pkgdir/$HOME/.config/nvim"
        cp -r neofetch "$pkgdir/$HOME/.config/neofetch"
        cp -r ranger "$pkgdir/$HOME/.config/ranger"
        cp -r newsboat "$pkgdir/$HOME/.config/newsboat"
}

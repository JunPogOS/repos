# Maintainer: Ocillacubes <squirtle1607@rollingoak.com>
pkgname='junpog-mpd'
pkgver=1.0
pkgrel=1
pkgdesc="Setup mpd and ncmpcpp"
arch=('x86_64')
depends=('mpd' 'ncmpcpp' 'mpc')
makedepends=('git')
url="https://github.com/JunPogOS/configs"
source=('junpog-mpd::git+https://github.com/JunPogOS/configs.git')
md5sums=('SKIP')

package() {
        mkdir -p "$pkgdir/usr/share/junpogos/.config"
        mkdir -p "$pkgdir/usr/share/junpogos/.lyrics"
        mkdir -p "$pkgdir/usr/share/junpogos/music"
        cp -r "$srcdir/${pkgname}/.config/ncmpcpp" "$pkgdir/usr/share/junpogos/.config/ncmpcpp"
        cp -r "$srcdir/${pkgname}/.config/mpd" "$pkgdir/usr/share/junpogos/.config/mpd"
}
